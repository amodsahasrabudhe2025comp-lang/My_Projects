#include <stdio.h>

struct player {
    char name[50];
    char origin[50];
    int age;
    int rank;
    int id;
};

int main() {
    struct player p[4], temp;
    int option, i, j, searchID;
    int count = 0;

    printf("This is a sports player's database.\n");

    while (1) {
        printf("\nWhat do you wish to do? Enter option number.");
        printf("\n1. Add to database");
        printf("\n2. Display entered data");
        printf("\n3. Sort data according to seed rank");
        printf("\n4. Find data of a particular player (by ID)");
        printf("\n5. Exit");
        printf("\nEnter option: ");
        scanf("%d", &option);

        switch (option) {

        
        case 1:
            printf("\nSelected option: Input player data.\n");

            for (i = 0; i < 4; i++) {
                printf("\nEnter data for player %d:\n", i + 1);
                printf("Player ID: ");
                scanf("%d", &p[i].id);

                printf("Name: ");
                scanf("%s", p[i].name);

                printf("Age: ");
                scanf("%d", &p[i].age);

                printf("Seed rank: ");
                scanf("%d", &p[i].rank);

                printf("Origin: ");
                scanf("%s", p[i].origin);
            }
            
            break;

        case 2:
            printf("\nSelected option: Display entered data.\n");

            for (i = 0; i < 4; i++) {
                printf("\nPlayer %d:\n", i + 1);
                printf("ID: %d\n", p[i].id);
                printf("Name: %s\n", p[i].name);
                printf("Age: %d\n", p[i].age);
                printf("Seed rank: %d\n", p[i].rank);
                printf("Origin: %s\n", p[i].origin);
            }
            break;

        case 3:
            printf("\nSelected option: Sort players by seed rank.\n");

            for (i = 0; i < 4; i++) {
                for (j = i + 1; j < 4; j++) {
                    if (p[i].rank > p[j].rank) {
                        temp = p[i];
                        p[i] = p[j];
                        p[j] = temp;
                    }
                }
            }

    printf("\nPlayers sorted by seed rank:\n");
    for(i = 0; i <=4; i++) {
        printf("\nPlayer %d:\n", i + 1);
        printf("ID: %d\n", p[i].id);
        printf("Name: %s\n", p[i].name);
        printf("Age: %d\n", p[i].age);
        printf("Seed rank: %d\n", p[i].rank);
        printf("Origin: %s\n", p[i].origin);
    }

            
            break;

       
        case 4:
            printf("\nSelected option: Find player by ID.\n");
            printf("Enter player ID to search: ");
            scanf("%d", &searchID);

            int found = 0;

            for (i = 0; i < 4; i++) {
                if (p[i].id == searchID) {
                    printf("\nPlayer found:\n");
                    printf("ID: %d\n", p[i].id);
                    printf("Name: %s\n", p[i].name);
                    printf("Age: %d\n", p[i].age);
                    printf("Seed rank: %d\n", p[i].rank);
                    printf("Origin: %s\n", p[i].origin);
                    found = 1;
                    break;
                }
            }

            if (!found) {
                printf("\nNo player found.â€);
            }
            break;

                case 5:
            printf("\nExiting program.\n");
            return 0;

        default:
            printf("\nInvalid option.\n");
        }
    }

    return 0;
}
